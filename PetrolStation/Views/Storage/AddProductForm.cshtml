@model PetrolStation.Models.ModelePomocnicze.ProductString
    <style>
        .Button {
            color: #fff;
            background-color: #007bff;
            border-color: #007bff;
            display: inline-block;
            font-weight: 400;
            text-align: center;
            vertical-align: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            border: 1px solid transparent;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            border-radius: 0.25rem;
            transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }
    </style>
@{
    ViewData["Title"] = "AddProductForm";
}

<h1>Add new product</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProductForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityInStorage" class="control-label">Quantity in storage</label>
                <input asp-for="QuantityInStorage" class="form-control" />
                <span asp-validation-for="QuantityInStorage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceInPoints" class="control-label">Price in points</label>
                <input asp-for="PriceInPoints" class="form-control" />
                <span asp-validation-for="PriceInPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Add" style="width: 100%"/>
            </div>
            <input class="btn btn-primary" type="button" value="View product list" onclick="location.href='@Url.Action("ViewProductList", "Storage")'" style="width: 100%"/>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
