            <div class="col-md-4">
                <div class="category">
                    <a asp-controller="Storage" asp-action="AddProductForm">Add product</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="category">
                    <a asp-controller="Storage" asp-action="ViewProductList">View product list</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="category">
                    <a asp-controller="Clients" asp-action="AddNewClient">Add new client</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="category">
                    <a asp-controller="Clients" asp-action="ClientList">clients</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="category">
                    <a asp-controller="TransactionList" asp-action="Index">Show transactions</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="category">
                    <a asp-controller="Supply" asp-action="AddSupply">Add Supply</a>
                </div>
            </div>
            <a asp-controller="Reports" asp-action="SaleOverPeriodOfTime">Zestawienie sprzedaży w okresie czasu</a>
        </div>
    </div>
