@{
    ViewData["Title"] = "Home Page";
}

    <style>
        .col-md-4 {
            padding: 20px;
        }
        .col-md-12 {
            padding: 20px;
        }
        .category {
            display: block;
            width: 100%;
            height: 160px;
            border-radius: .25rem;
            border: 1px solid #1861ac;
            transition: color 1s
        }
        .category:hover {
            background-color: #1861ac;
            color: white; 
        }
        .category a {
            position: relative;
            top: 42%;
            transform: translateY(-50%);
            text-align: center;
            color: inherit;
            cursor: inherit;
        }
        .category a:hover {
            color: inherit;
            text-decoration: none;
        }
    </style>

    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <div class="row">
            <div class="col-md-12">
                <div class="category">
                    <a asp-controller="Transaction" asp-action="AddTransaction">Add Transaction</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="category">
                    <a asp-controller="Storage" asp-action="AddProductForm">Add new Product</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="category">
                    <a asp-controller="Clients" asp-action="AddNewClient">Add new client</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="category">
                    <a asp-controller="Supply" asp-action="AddSupply">Add a Supply</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="category">
                    <a asp-controller="Storage" asp-action="ViewProductList">List Products</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="category">
                    <a asp-controller="Clients" asp-action="ClientList">List Clients</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="category">
                    <a asp-controller="TransactionList" asp-action="Index">List Transactions</a>
                </div>
            </div>
        </div>
    </div>
<script>
    let buttons = document.getElementsByClassName("category");
    let button;
    for (let i in buttons) {
        buttons[i].addEventListener("click", function (e) {
            button = this.getElementsByTagName("a")[0];
            button.click();
        });
    }
</script>